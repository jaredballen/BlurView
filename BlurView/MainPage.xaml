<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:forms="clr-namespace:SkiaSharp.Views.Forms;assembly=SkiaSharp.Views.Forms"
             xmlns:local="clr-namespace:BlurView"
             x:Class="BlurView.MainPage"
             x:Name="RootView">

    <Grid ColumnDefinitions="*, *"
          RowSpacing="0"
          ColumnSpacing="0">
        
        <Label Grid.ColumnSpan="2"
               HorizontalOptions="Center"
               VerticalOptions="Start"
               FontSize="Large"
               FontAttributes="Bold"
               Text="BlurView Test" />
        
        <local:BlurView Grid.Column="0"
                        BackgroundColor="#73007300"
                        BlurRadius="25"
                        VerticalOptions="Start"
                        HeightRequest="50" />
        
        <local:SKCanvasView Grid.ColumnSpan="2"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            HeightRequest="100"
                            WidthRequest="100"
                            PaintSurface="SKCanvasView_OnPaintSurface"/>
        
        <local:BlurView Grid.Column="0"
                        BackgroundColor="#73740000"
                        BlurRadius="25"
                        VerticalOptions="Center"
                        HeightRequest="200" />
        
        <local:BlurView Grid.Column="0"
                        Grid.ColumnSpan="2"
                        BackgroundColor="#73007300"
                        BlurRadius="25"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        WidthRequest="75"
                        HeightRequest="250">
            <BoxView BackgroundColor="Yellow"
                     HorizontalOptions="Center"
                     VerticalOptions="Center"
                     WidthRequest="10"
                     HeightRequest="10" />
        </local:BlurView>
        
    </Grid>

</ContentPage>
