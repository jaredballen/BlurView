             xmlns:blurView="clr-namespace:BlurView;assembly=BlurView"
             x:Class="BlurView.MainPage"
             x:DataType="blurView:MainPage">
    
    <Grid RowDefinitions="*, 2*, *"
          ColumnDefinitions="*, 2*, *">
        
        <Image Grid.Row="0"
               Grid.RowSpan="3"
               Grid.Column="0"
               Grid.ColumnSpan="3"
               Aspect="AspectFill"
               Source="{Binding SelectedBackgroundImageSource}"
               IsVisible="{Binding ShowBackgroundImage}" />
            
        <views:BlurView Grid.Row="1"
                        Grid.Column="1"
                        AutomationProperties.HelpText="AcrylicView1"
                        Material="{Binding Material}" />

        <StackLayout Grid.Row="2"
                     Grid.Column="1"
                     VerticalOptions="Center">
               
            <Frame VerticalOptions="Center"
                   Padding="0"
                   CornerRadius="8">
                <Picker BackgroundColor="White"
                        TextColor="Black"
                        TitleColor="Black"
                        ItemsSource="{Binding Backgrounds}"
                        SelectedItem="{Binding SelectedBackground}"/>
             </Frame>
            
            <Frame VerticalOptions="Center"
                   Padding="0"
                   CornerRadius="8">
                <Picker BackgroundColor="White"
                        TextColor="Black"
                        TitleColor="Black"
                        ItemsSource="{Binding Materials}"
                        SelectedItem="{Binding SelectedMaterial}" />
            </Frame>
            
        </StackLayout>

    </Grid>
    
    
    
